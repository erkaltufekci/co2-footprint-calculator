{
  "name": "co2-footprint-calculator",
  "version": "0.0.1",
  "description": "It calculates personal CO2 Footprint",
  "private": true,
  "main": "./bin/www",
  "scripts": {
    "test": "jest --testEnvironment=node --verbose --forceExit --watchAll --maxWorkers=1",
    "test-coverage": "jest --collect-coverage --testEnvironment=node --forceExit --maxWorkers=1",
    "start": "node ./bin/www",
    "start-nodemon": "nodemon ./bin/www",
    "lint": "lint-staged",
    "lint-only": "eslint .",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "keywords": [
    "software",
    "engineering",
    "nodejs",
    "backend"
  ],
  "author": "Erkal TÃ¼fekci<erkaltufekci@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "husky": "^6.0.0",
    "mongoose": "^5.12.13",
    "mongoose-autopopulate": "^0.14.0",
    "morgan": "~1.9.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
